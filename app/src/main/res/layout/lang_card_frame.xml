<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/drx_moziqon68"

    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/languageFlag"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:adjustViewBounds="true"
            android:src="@mipmap/drx_moziqon"
            android:visibility="gone" />

        <TextView
            android:id="@+id/languageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/drx_moziqonsemibold"
            android:text="Hindi"
            android:textColor="@color/drx_moziqonwhite"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/languagePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(नमस्ते)"
            android:textColor="#A4A4A4"
            android:textSize="@dimen/_9ssp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imgSelect"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/_10sdp"

        android:src="@drawable/drx_moziqon17"
        android:visibility="visible" />
</LinearLayout>
