<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/btnBooyah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/drx_moziqon23" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCollect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/drx_moziqonregular"
            android:gravity="center"
            android:text="If you play in ML Rank you will\nget: 0.855000000001 ML Diamonds"
            android:textColor="@color/drx_moziqonwhite"
            android:textSize="@dimen/_10ssp" />

        <View
            android:id="@+id/btnOkay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/_90sdp"

            android:layout_marginBottom="@dimen/_25sdp"
            android:visibility="visible" />
    </LinearLayout>


</FrameLayout>

