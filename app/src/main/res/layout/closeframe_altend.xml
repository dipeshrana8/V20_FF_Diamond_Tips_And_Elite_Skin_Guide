<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_maindrx_moziqon_bg"
    android:orientation="vertical"
    tools:context=".xentry.ExitGateAct">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/header_topzone_ui" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameAdDynShell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"

                android:minHeight="@dimen/_180sdp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/drx_moziqon41" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/btnYes"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_gravity="end|bottom|center"
                        android:layout_marginHorizontal="@dimen/_50sdp"
                        android:layout_marginBottom="@dimen/_15sdp" />

                    <View
                        android:id="@+id/btnNo"
                        android:layout_width="@dimen/_85sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="bottom|center_horizontal"

                        android:layout_marginBottom="@dimen/_20sdp"

                        />


                </LinearLayout>


            </FrameLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>